    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Administration login</title>
    <link href="~/css/loginView.css" rel="stylesheet" />
</head>
<body>
    <form method="post" class="bg-white shadow-sm border-primary rounded-sm">
